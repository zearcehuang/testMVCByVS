                </td>
            </tr>
            <tr>
                <td style="white-space: nowrap; width: 1%;">
                    @Html.LabelFor(model => model.CODE_NAME, new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.EditorFor(model => model.CODE_NAME, new { htmlAttributes = new { @class = "form-control", maxlength = "20" } })
